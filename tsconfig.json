{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2015",
    "types": ["node"],
    "rootDir": "./src",
    "declaration": false,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
